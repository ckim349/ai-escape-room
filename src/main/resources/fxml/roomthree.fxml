            <Image url="@../images/spaceship%20exterior.png" />
         </image>
      </ImageView>
      <Rectangle fx:id="door" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="27.0" layoutX="538.0" layoutY="226.0" onMouseClicked="#clickDoor" stroke="BLACK" strokeType="INSIDE" width="48.0" />
      <Text layoutX="525.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Click to win" />
      <Label layoutX="46.0" layoutY="33.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ec00ff;" text="Time Remaining:">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="timerLabel" layoutX="244.0" layoutY="33.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ec00ff;" text="2:00">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Text layoutX="314.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Room 3">
         <font>
            <Font size="53.0" />
         </font>
      </Text>
      <Text layoutX="14.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Click to go back to room 2" />
      <Rectangle fx:id="goBackRectangle" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="35.0" layoutX="14.0" layoutY="235.0" onMouseClicked="#clickGoBackRectangle" stroke="BLACK" strokeType="INSIDE" width="48.0" />
