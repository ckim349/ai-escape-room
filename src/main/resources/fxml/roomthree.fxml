      <Circle fx:id="screwTwo" fill="DODGERBLUE" layoutX="323.0" layoutY="158.0" opacity="0.49" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fx:id="screwThree" fill="DODGERBLUE" layoutX="355.0" layoutY="200.0" opacity="0.49" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
      <Circle fx:id="screwFour" fill="DODGERBLUE" layoutX="277.0" layoutY="243.0" opacity="0.49" radius="5.0" stroke="BLACK" strokeType="INSIDE" />
      <VBox fx:id="puzzleScreen" alignment="CENTER" layoutX="118.0" layoutY="65.0" prefHeight="270.0" prefWidth="401.0">
         <children>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="212.0" opacity="0.88" stroke="BLACK" strokeType="INSIDE" width="314.0" />
            <Button fx:id="resumeButton" mnemonicParsing="false" onMouseClicked="#clickResumeButton" text="resume" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </children>
</Pane>
