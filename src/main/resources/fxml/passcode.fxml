<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="470" prefWidth="600" style="-fx-background-color: #1e1e1e;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/20.0.1" fx:controller="nz.ac.auckland.se206.controllers.PasscodeController">
    <VBox alignment="CENTER" layoutX="162.0" layoutY="148.0" spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label style="-fx-font-size: 18; -fx-text-fill: white;" text="Enter the four-digit passcode:" />

        <TextField fx:id="passcodeField" style="-fx-background-color: #3e3e3e; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;" />

        <Button fx:id="checkButton" onAction="#checkPasscode" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5;" text="Check" />
        
        <Label fx:id="resultLabel" style="-fx-font-size: 16; -fx-text-fill: white;" text="" />

    </VBox>
    
    <Button fx:id="goBackButton" layoutX="10" layoutY="10" onAction="#goBack" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5;" text="Go Back" />
</AnchorPane>
