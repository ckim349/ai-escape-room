<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.PasscodeController">
    <VBox alignment="CENTER" layoutX="296.0" layoutY="212.0" spacing="10">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label prefHeight="35.0" prefWidth="368.0" style="-fx-text-fill: white;" text="Enter the four-digit passcode:">
         <font>
            <Font size="24.0" />
         </font></Label>

        <TextField fx:id="passcodeField" style="-fx-background-color: #3e3e3e; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 5;">
         <font>
            <Font size="20.0" />
         </font></TextField>

        <Button fx:id="checkButton" onAction="#onCheckPasscode" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 5;" text="Check">
         <font>
            <Font size="18.0" />
         </font></Button>
        
        <Label fx:id="resultLabel" style="-fx-font-size: 16; -fx-text-fill: white;" text="" />

    </VBox>
   <Label fx:id="timerLabel" layoutX="186.0" layoutY="44.0" prefHeight="35.0" prefWidth="382.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ec00ff;" text="Time Remaning: 02:00">
      <font>
         <Font size="20.0" />
      </font>
   </Label>
   <Button fx:id="goBackButton" layoutX="44.0" layoutY="44.0" onAction="#onGoBack" prefHeight="47.0" prefWidth="103.0" style="-fx-font-size: 18;" styleClass="otherButtons" text="Back">
      <font>
         <Font size="18.0" />
      </font>
   </Button>
</AnchorPane>
