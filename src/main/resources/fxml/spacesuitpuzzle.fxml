      <!-- Code Information -->
      <Label layoutX="254.0" layoutY="198.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Unscramble this space related word:" textFill="WHITE" />
      <Label fx:id="scrambledWordLabel" layoutX="254.0" layoutY="290.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="EXAMPLE" textFill="WHITE" />

