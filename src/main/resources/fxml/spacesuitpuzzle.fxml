<Pane prefHeight="650.0" prefWidth="1000.0" style="-fx-background-color: #969696;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.controllers.SpacesuitPuzzleController">
   <children>
      <Rectangle arcHeight="5.0" arcWidth="5.0" height="418.0" layoutX="197.0" layoutY="141.0" stroke="BLACK" strokeType="INSIDE" width="628.0" />
