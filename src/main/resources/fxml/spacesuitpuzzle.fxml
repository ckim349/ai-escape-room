      <Label fx:id="timerLabel" layoutX="207.0" layoutY="53.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Time Remaining: 02:00">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      
   </children>
</Pane>
